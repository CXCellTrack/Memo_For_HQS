<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".login"
    android:id="@+id/rl"
    android:background="@android:color/darker_gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帐号类型"
        android:id="@+id/textView1"
        android:layout_marginTop="103dp"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帐号"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/editText1"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/editText2"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginLeft="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:id="@+id/button_get"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/textView1"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记录"
        android:id="@+id/button_set"
        android:width="100dp"
        android:textSize="18dp"
        android:layout_alignTop="@+id/button_get"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/button_get" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_dog"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:layout_marginBottom="10dp"
        android:src="@drawable/dog"
        android:scaleType="fitCenter"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@android:drawable/ic_input_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignTop="@+id/editText3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@android:drawable/ic_input_delete"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignTop="@+id/editText2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton1"
        android:background="@android:drawable/ic_input_delete"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignEnd="@+id/editText1"
        android:layout_alignTop="@+id/editText1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看全部"
        android:id="@+id/button_see"
        android:layout_alignTop="@+id/button_set"
        android:layout_alignParentEnd="true"
        android:width="100dp"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/button_set" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_clear"
        android:layout_toStartOf="@+id/button_set"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/button_see"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="使用说明（此处在代码中设置）"
            android:id="@+id/textView_help"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空"
        android:id="@+id/button_clear"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button_see"
        android:textSize="18dp"
        android:layout_below="@+id/button_see" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:id="@+id/button_delete"
        android:layout_alignBottom="@+id/button_clear"
        android:layout_alignEnd="@+id/button_set"
        android:layout_alignStart="@+id/button_set"
        android:textSize="18dp"
        android:layout_alignTop="@+id/button_clear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日话语"
        android:id="@+id/button_tips"
        android:layout_alignBottom="@+id/button_delete"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button_get"
        android:layout_alignTop="@+id/button_delete"
        android:textSize="18dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignBottom="@+id/imageButton_dog"
        android:layout_alignEnd="@+id/imageButton1"
        android:layout_marginBottom="25dp"
        android:indeterminate="false" />

</RelativeLayout>
